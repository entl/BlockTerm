{
    "appId": "com.maksym-vorobyov.blockterm",
    "productName": "BlockTerm",
    "directories": {
        "output": "dist"
    },
    "files": [
        "dist-react",
        "dist-electron"
    ],
    "icon": "./desktopIcon.png",
    "extraResources": [
        {
            "from": "../proto",
            "to": "proto",
            "filter": ["*.proto"]
        },
        {
            "from": "resources/backend",
            "to": "backend",
            "filter": ["server", "server.exe"]
        }
    ],
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "target": ["portable", "msi"]
    }
}